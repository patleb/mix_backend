version: "3"
volumes:
  postgis:
#  geoserver:
services:
  postgis:
    image: timescale/timescaledb-postgis:latest-pg11
    container_name: postgis
    ports:
      - 127.0.0.1:5432:5432
    volumes:
      - postgis:/var/lib/postgresql/data
    restart: always
    logging:
      options:
        max-size: "10m"
        max-file: "5"
    environment:
      - POSTGREP_DB=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - TIMESCALEDB_TELEMETRY=off
