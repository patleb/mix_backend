namespace :load do
  task :defaults do
    set :geoserver_roles, -> { fetch(:passenger_roles) }
  end
end

namespace :geoserver do
  %w[start stop restart reload].each do |action|
    desc "#{action.capitalize} GeoServer"
    task action do
      on release_roles fetch(:geoserver_roles) do
        execute :sudo, "systemctl #{action} geoserver"
      end
    end
  end
end
