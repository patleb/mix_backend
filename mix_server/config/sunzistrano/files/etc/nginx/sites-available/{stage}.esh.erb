# Default server configuration
#

# TODO https://mattbrictson.com/accelerated-rails-downloads
# https://www.djaodjin.com/blog/nginx-authenticated-files-access.blog.html
server {
  listen 80;
  listen [::]:80;

  server_name '${server_host}';

  location ~ \.php\$ {
    return 404;
  }

  <%- if sun.passenger -%>
    root $current_path/public;

    passenger_enabled on;
    passenger_app_env ${env};
    passenger_env_var RAILS_APP ${app};
    passenger_env_var RAKE_OUTPUT true;
    # TODO
    # try_files \$uri @passenger;
    #
    # location @passenger {
    #   passenger_enabled on;
    #   passenger_app_env ${env};
    #   limit_req zone=per_ip burst=8 nodelay;
    #   limit_req zone=per_server burst=20 nodelay;
    # }

    error_page 503 @503;

    location @503 {
      if (-f \$request_filename) {
        break;
      }

      rewrite ^(.*)\$ /503.html break;
    }
  <%- end -%>

  $nginx_early_return

  ##
  # Logging Settings
  ##

  access_log /var/log/nginx/${stage}.access.log mix_server_access_log;

  # SSL configuration
  #
  <%- if sun.server_ssl %>
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
  <%- end -%>
  #
  # Self signed certs generated by the ssl-cert package
  # Don't use them in a production server!
  #
  # include snippets/snakeoil.conf;

  <%- if sun.passenger -%>
    location /packs/ {
      gzip_static on;
      if_modified_since off;
      add_header Last-Modified "";
      etag off;
      expires 1M;
      add_header Cache-Control public;
      access_log /var/log/nginx/${stage}_packs.access.log mix_server_access_log;
    }

    <%- (sun.public_dirs || []).each do |root| -%>
      location /<%= root %>/ {
        expires 1M;
        add_header Cache-Control public;
        access_log /var/log/nginx/${stage}_public.access.log mix_server_access_log;
        open_file_cache_errors off;
      }
    <%- end -%>

    <%- (sun.public_files || []).each do |root| -%>
      location /<%= root %> {
        expires 1M;
        add_header Cache-Control public;
        access_log /var/log/nginx/${stage}_public.access.log mix_server_access_log;
      }
    <%- end -%>
  <%- end -%>
}

<%- if sun.nginx_redirects.present? -%>
  server {
    listen 80;
    listen [::]:80;
    <%- if sun.server_ssl -%>
      listen 443 ssl;
      listen [::]:443 ssl;
    <%- end -%>

    server_name '${server_host}';

    <%- sun.nginx_redirects.each do |src, dst| -%>
      location = /<%= src.sub(/^\//, '') %> {
        return 301 \$scheme://\$server_name/<%= dst.sub(/^\//, '') %>;
      }
    <%- end -%>
  }
<%- end -%>

