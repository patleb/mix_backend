[Unit]
Description=Background worker
After=network.target

[Service]
User=<%= fetch(:deployer_name) %>
WorkingDirectory=<%= fetch(:deploy_to) %>/current
ExecStart=/home/<%= fetch(:deployer_name) %>/.rbenv/bin/rbenv sudo RAKE_OUTPUT=true RAILS_ENV=<%= cap.env %> RAILS_APP=<%= cap.app %> bin/rake job:watch -- --queue=<%= fetch(:job_queue_name) %> >> <%= fetch(:deploy_to) %>/current/log/job.log 2>&1
Restart=always
StandardInput=null
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=<%= fetch(:job_service) %>
KillMode=mixed
TimeoutStopSec=infinity

[Install]
WantedBy=multi-user.target
