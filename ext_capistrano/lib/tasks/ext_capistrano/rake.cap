desc "Execute a rake task on a remote server"
task :rake do
  if ENV['TASK']
    on release_roles :all do
      with_rake do
        execute :rake, ENV['TASK']
      end
    end
  else
    error "\n\nFailed! You need to specify the 'TASK' parameter!", "Usage: cap <stage> rake TASK=your:task"
  end
end
